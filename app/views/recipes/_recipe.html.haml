%div.rec-item
  %a.recipe-link{:href => recipe_path(recipe)}
    %img{:src => recipe_thumbnail_path(recipe)}
    .item-text
      = recipe.title
  %ul.recipe-stats
    %li.forks
      %span.label
        %i.fa.fa-code-fork
        = pluralize(recipe.number_of_forks, 'fork')
    %li.saves
      %span.label
        %i.fa.fa-star
        = pluralize(recipe.number_of_stars, 'save')
